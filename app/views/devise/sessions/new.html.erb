<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions" style="float:left; margin-top:14px;">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<br><br><br><br><br>
<div style="text-align:center;">
  <h3>Sign in with Twitter/Facebook</h3>
<p>
<%= link_to image_tag("/assets/twitter.png", class: 'image'), omniauth_authorize_path(resource_name, :twitter) %>
<%= link_to image_tag("/assets/facebook.png", class: 'image'), omniauth_authorize_path(resource_name, :facebook) %>
</p>
</div>
<br>


